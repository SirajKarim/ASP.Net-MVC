                            <div class="col-md-7 site-section-heading pt-4">
                                <h2>Categories</h2>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6 col-md-6 col-lg-4 mb-4 mb-lg-0 aos-init aos-animate" data-aos="fade" data-aos-delay="">
                                <a class="block-2-item" href="/Shop/StrengthTraining/StrengthTraining.cshtml">
                                    <figure class="image">
                                        <img src=@Url.Content("/Content/images/Strength/e.jpg") alt="" class="img-fluid">
                                    </figure>
                                    <div class="text">
                                        <span class="text-uppercase">Collections</span>
                                        <h3>Strength Training</h3>
